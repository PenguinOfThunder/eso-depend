{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build",
      "command": "dotnet",
      "type": "shell",
      "args": [
        "build",
        "/property:GenerateFullPaths=true",
        "/consoleloggerparameters:NoSummary"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "reveal": "silent"
      },
      "problemMatcher": "$msCompile"
    },
    {
      "label": ".NET Core Test",
      "command": "dotnet test",
      "type": "shell"
    },
    {
      "label": ".NET Core Test with debugger",
      "type": "process",
      "isBackground": true,
      "command": "dotnet",
      "args": ["test"],
      "options": {
        "cwd": "${workspaceFolder}/EsoAdv.Metadata.Test",
        "env": { "VSTEST_HOST_DEBUG": "1" }
      },
      "group": "test",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": []
    }
  ]
}
